<!--
  LegacyBridge - Custom ActiveMQ Configuration

  This configuration is copied to activemq/conf/activemq.xml during setup.
  It configures ActiveMQ with:
  - TCP transport on port 61616
  - Web console on port 8161
  - Pre-defined queues for document processing
  - Simple authentication (admin/admin, user/user)
  - KahaDB persistence
-->
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                       http://www.springframework.org/schema/beans/spring-beans.xsd
                       http://activemq.apache.org/schema/core
                       http://activemq.apache.org/schema/core/activemq-core.xsd">

    <!-- Allows accessing the server log -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <value>file:${activemq.conf}/credentials.properties</value>
        </property>
    </bean>

    <!-- Allows log4j to find the activemq.base system property -->
    <bean id="logQuery" class="io.fabric8.insight.log.log4j.Log4jLogQuery"
          lazy-init="false" scope="singleton"
          init-method="start" destroy-method="stop">
    </bean>

    <broker xmlns="http://activemq.apache.org/schema/core"
            brokerName="LegacyBridgeBroker"
            dataDirectory="${activemq.data}"
            useJmx="true"
            advisorySupport="false">

        <!-- Destination policies -->
        <destinationPolicy>
            <policyMap>
                <policyEntries>
                    <policyEntry queue=">" producerFlowControl="true" memoryLimit="1mb"
                                 maxBrowsePageSize="700">
                        <deadLetterStrategy>
                            <individualDeadLetterStrategy queuePrefix="DLQ."
                                                          useQueueForQueueMessages="true"/>
                        </deadLetterStrategy>
                    </policyEntry>
                    <policyEntry topic=">" producerFlowControl="true">
                        <pendingMessageLimitStrategy>
                            <constantPendingMessageLimitStrategy limit="1000"/>
                        </pendingMessageLimitStrategy>
                    </policyEntry>
                </policyEntries>
            </policyMap>
        </destinationPolicy>

        <!-- Pre-defined destinations for LegacyBridge -->
        <destinations>
            <queue physicalName="document.process"/>
            <queue physicalName="document.reindex"/>
            <queue physicalName="document.notify"/>
        </destinations>

        <!-- Simple authentication plugin -->
        <plugins>
            <simpleAuthenticationPlugin anonymousAccessAllowed="false">
                <users>
                    <authenticationUser username="admin" password="admin"
                                        groups="admins,publishers,consumers"/>
                    <authenticationUser username="user" password="user"
                                        groups="publishers,consumers"/>
                </users>
            </simpleAuthenticationPlugin>

            <authorizationPlugin>
                <map>
                    <authorizationMap>
                        <authorizationEntries>
                            <authorizationEntry queue=">"
                                                read="consumers,admins"
                                                write="publishers,admins"
                                                admin="admins"/>
                            <authorizationEntry topic=">"
                                                read="consumers,admins"
                                                write="publishers,admins"
                                                admin="admins"/>
                            <authorizationEntry topic="ActiveMQ.Advisory.>"
                                                read="consumers,publishers,admins"
                                                write="consumers,publishers,admins"
                                                admin="consumers,publishers,admins"/>
                        </authorizationEntries>
                    </authorizationMap>
                </map>
            </authorizationPlugin>
        </plugins>

        <!-- Managed store configuraton - KahaDB -->
        <persistenceAdapter>
            <kahaDB directory="${activemq.data}/kahadb"/>
        </persistenceAdapter>

        <!-- System usage limits -->
        <systemUsage>
            <systemUsage>
                <memoryUsage>
                    <memoryUsage percentOfJvmHeap="70"/>
                </memoryUsage>
                <storeUsage>
                    <storeUsage limit="100 gb"/>
                </storeUsage>
                <tempUsage>
                    <tempUsage limit="50 gb"/>
                </tempUsage>
            </systemUsage>
        </systemUsage>

        <!-- Transport connectors -->
        <transportConnectors>
            <!-- TCP transport for JMS clients -->
            <transportConnector name="openwire"
                                uri="tcp://0.0.0.0:61616?maximumConnections=1000&amp;wireFormat.maxFrameSize=104857600"/>
        </transportConnectors>

        <!-- Shutdown hooks to gracefully stop the broker -->
        <shutdownHooks>
            <bean xmlns="http://www.springframework.org/schema/beans"
                  class="org.apache.activemq.hooks.SpringContextHook"/>
        </shutdownHooks>

    </broker>

    <!--
      Jetty Web Console configuration
      Access the console at http://localhost:8161/
      Default credentials: admin/admin
    -->
    <import resource="jetty.xml"/>

</beans>
